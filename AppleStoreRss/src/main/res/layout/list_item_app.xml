<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="4dp"
              android:background="@drawable/list_item_selected">

	<ImageView
		android:id="@+id/list_item_app_picture"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/loading_image_small"
		android:layout_marginRight="4dp"
		tools:ignore="ContentDescription"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/list_item_app_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Blank App Title"
			tools:ignore="HardcodedText"/>

		<TextView
			android:id="@+id/list_item_app_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:text="$6.99"
			tools:ignore="HardcodedText"/>
	</LinearLayout>


	<CheckBox
		android:id="@+id/expanded_app_favoriteCheckBox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:button="@android:drawable/btn_star"
		android:focusable="false"/>


</LinearLayout>